<?xml version="1.0" encoding="utf-8"?>
<odoo>


<record id="stage_responsable_action" model="ir.actions.act_window">
    <field name="name">Gestion des stages</field>
    <field name="res_model">stage.responsable</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree,form</field>
    </record>

<menuitem
    id="stage_base_menu"
    name="Application de gestion de stage"
    sequence="0"/>

<menuitem
    id="stage_responsable_menu"
    name="Responsable"
    parent="stage_base_menu"
    action="" 
    sequence="1"/>

<record id="stage_responsable_view_form" model="ir.ui.view">
    <field name="name">CrÃ©ation d'un responsable de stage</field>
    <field name="model" >stage.responsable</field>
    <field name="arch" type="xml">

    <form>
        <sheet>
            <group>
                <field name="nom" placeholder="Nom du responsable"/>
                <field name="prenom" placeholder="Prenom du responsable"/>
                <field name="departement" placeholder="departement du responsable"/>
                <field name="telephone" placeholder="telephone du responsable"/>
            </group>
        </sheet>
    </form>
    </field>
</record>


<record id="stage_responsable_view_tree" model="ir.ui.view">

    <field name="name">Liste des responsables de stage</field>
    <field name="model" >stage.responsable</field>
    <field name="arch" type="xml">

    <tree>
        <field name="nom"/>
        <field name="prenom"/>
        <field name="departement"/>
        <field name="telephone"/>    
    </tree>
</field>
</record>

<record id="stage_responsable_view_search" model="ir.ui.view">
    <field name="name">Recherche</field>
    <field name="model" >stage.responsable</field>
    <field name="arch" type="xml">
    <search>
        <field name="nom"/>
        <field name="prenom"/>
    </search>
    </field>
</record>

</odoo>
